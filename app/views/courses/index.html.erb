<div class="col-md-12">
  <div class="course">
    <%= link_to("New Course", new_course_path, class: "btn btn-primary pull-right")%>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Name</td>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
      <tr>
        <td>#</td>
        <td><%= link_to(course.name, course_path(course))%></td>
        <td>
          <%= link_to("Edit", edit_course_path(course), class: "btn btn-sm btn-default")%>
          <%= link_to("Delete", course_path(course), class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?"})%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
